<?xml version="1.0" encoding="UTF-8"?>

<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
   http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="Hibernate_JPA" transaction-type="RESOURCE_LOCAL">
        <class>com.bdg.homework.hibernate_jpa.airport.model.PrimaryKey</class>
        <class>com.bdg.homework.hibernate_jpa.airport.model.Passenger</class>
        <class>com.bdg.homework.hibernate_jpa.airport.model.Trip</class>
        <class>com.bdg.homework.hibernate_jpa.airport.model.Company</class>
        <class>com.bdg.homework.hibernate_jpa.airport.model.Address</class>


        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/airoport_managment_system_jpa"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
        </properties>


    </persistence-unit>

</persistence>
